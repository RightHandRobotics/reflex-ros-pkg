    <color rgba="0.106 0.227 0.631 1"/>
  </xacro:macro>

  <!-- Macro to make each part of the link -->
  <xacro:macro name="flex_link" params="finger_id flex_id">
    <link
      name="${tf_prefix}finger[${finger_id}]/flex_link[${flex_id}]">
      <visual>
        <origin
          xyz="0.001 -0.007 0.003"
          rpy="${pi/2} 0 ${pi/2}" />
        <geometry>
          <mesh
            filename="package://reflex_visualizer/meshes/flex_block.STL" />
        </geometry>
        <material
          name="${tf_prefix}">
          <xacro:flex_color/>
        </material>
      </visual>
    </link>
  </xacro:macro>

	<!-- Macro to one flex body link to the next -->
	<xacro:macro name="flex_joint" params="finger_id link_parent link_child">
		<joint name="${tf_prefix}finger[${finger_id}]/flex_joint_from_${link_parent}_to_${link_child}" type="continuous">
			<parent link="${tf_prefix}finger[${finger_id}]/flex_link[${link_parent}]"/>
			<child link="${tf_prefix}finger[${finger_id}]/flex_link[${link_child}]"/>
			<origin xyz="${flex_length/num_steps} 0 0" />
			<axis xyz="0 -1 0"/>
		</joint>
	</xacro:macro>

	<!-- Macro to make the joint from proximal to first link and from last link to distal  -->
	<xacro:macro name="flex_to_segment_joint" params="finger_id">
		<joint name="${tf_prefix}finger[${finger_id}]/flex_joint_from_prox_to_1" type="continuous">
			<parent link="${tf_prefix}proximal_${finger_id}"/>
			<child link="${tf_prefix}finger[${finger_id}]/flex_link[1]"/>
			<origin xyz="${prox_length} 0 -0.004"/>
			<axis xyz="0 -1 0"/>
		</joint>

		<joint name="${tf_prefix}finger[${finger_id}]/flex_joint_from_${num_steps}_to_dist" type="continuous">
			<parent link="${tf_prefix}finger[${finger_id}]/flex_link[${num_steps}]"/>
			<child link="${tf_prefix}distal_${finger_id}"/>
			<origin xyz="${flex_length/num_steps-0.01} 0 0.008"/>
			<axis xyz="0 -1 0"/>
		</joint>
	</xacro:macro>

